<h1>Schools</h1>

<table class="table">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Banding</th>
      <th>District</th>
      <th>Deadline</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.school_type %></td>
        <td><%= school.name %></td>
        <td><%= school.banding %></td>
        <td><%= school.district %></td>
        <td><%= school.deadline %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <% if current_user.email == "vvwmchan@gmail.com" %>
          <td><%= link_to 'Delete', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @schools %> <br>
<%= link_to 'New School', new_school_path %>
