<p id="notice"><%= notice %></p>

<h1>Your Applications</h1>

<table class="table">
  <thead>
    <tr>
      <th>School</th>
      <th>Type</th>
      <th>Deadline</th>
      <th>Briefing</th>
      <th>Submit Date</th>
      <th>Interview Date</th>
      <th>Result Date</th>
      <th>Success?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.school.name %></td>
        <td><%= application.school.school_type %></td>
        <% warning=(application.school.deadline-Date.today).to_i %>
        <% if (warning > 7) || !application.submit_date.nil?  %>
           <td><%= application.school.deadline %></td>
        <% else %>
          <td class="danger"><%= application.school.deadline %></td>
        <% end %>
        <td><%= application.try(:briefing_date).try(:strftime, ("%Y-%m-%d %H:%M")) %></td>
        <td><%= application.submit_date %></td>
        <td><%= application.try(:interview_date).try(:strftime, ("%Y-%m-%d %H:%M")) %></td>
        <td><%= application.result_date %></td>
        <td><%= application.success ? "Yes" : "No" %></td>
        <td><%= link_to 'Edit', edit_application_path(application) %></td>
        <td><%= link_to 'Delete', application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

